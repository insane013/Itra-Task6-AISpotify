@using Task6.Models
@model GenerationData

<div class="container-fluid bg-dark text-light shadow-sm sticky-top">
    <div class="container d-flex align-items-center gap-4 p-3">
        <div class="dropdown">
            <button class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                üåç <span id="current-locale">@Model.Locale</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-light text-dark" id="locale-dropdown" style="max-height: 300px; overflow-y: auto;">
                <li class="px-3 py-1">
                    <input type="text" id="localeSearch" class="form-control form-control-sm" placeholder="Search locale..." />
                </li>
                <li><hr class="dropdown-divider"></li>

            </ul>
        </div>

        <div class="d-flex align-items-center">
            <label for="seedInput" class="me-2 fw-semibold">Seed:</label>
            <input type="text" id="seedInput" class="form-control form-control-sm bg-dark text-light border-light" style="width: 150px;" value = "@Model.Seed">
        </div>

        <div class="d-flex align-items-center">
            <label for="likesRange" class="me-2 fw-semibold">Likes:</label>
            <input type="range" id="likesRange" min="0" max="10" step="0.1" class="form-range" style="width: 150px;" value = "@Model.Likes">
            <span id="likesValue" class="ms-2 fw-bold">@Model.Likes</span>
        </div>
    </div>
</div>